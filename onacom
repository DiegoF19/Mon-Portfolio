    <script>
        if (localStorage.getItem('theme') === 'night') {
            document.body.classList.add('night-mode');
            document.querySelector('.mode-toggle').textContent = 'Mode Clair';
        }
        document.querySelector('.mode-toggle').addEventListener('click', () => {
            localStorage.setItem('theme', document.body.classList.contains('night-mode') ? 'light' : 'night');
        });
